{
  "name": "i18n-at-monorepo",
  "version": "0.2.2",
  "private": true,
  "description": "Type-safe internationalization toolkit for React with IDE code jumping support",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "docs:build": "cd docs && npx vitepress build",
    "docs:dev": "cd docs && pnpm run docs:dev",
    "docs:deploy": "npm run docs:build && npx wrangler pages deploy docs/.vitepress/dist --project-name=i18n-at-docs",
    "docs:preview": "npm run docs:build && npx wrangler pages deploy docs/.vitepress/dist --project-name=i18n-at-docs --env=preview",
    "test": "pnpm -r test",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "version:dry-run": "node scripts/bump-version.js patch --dry-run",
    "release:prepare": "pnpm build && pnpm version:dry-run"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitepress": "^1.6.4",
    "wrangler": "^3.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jabelic-works/i18n-at.git"
  },
  "bugs": {
    "url": "https://github.com/jabelic-works/i18n-at/issues"
  },
  "files": [
    "README.md"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "typescript",
    "react",
    "type-safe",
    "code-jumping",
    "nextjs"
  ],
  "homepage": "https://github.com/jabelic-works/i18n-at/tree/main/packages/core#readme",
  "license": "MIT"
}
