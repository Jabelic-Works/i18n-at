{
  "name": "i18n-at-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Type-safe internationalization toolkit for React with IDE code jumping support",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "docs:build": "cd docs && NODE_ENV=development pnpm install --prod=false && pnpm run docs:build",
    "docs:dev": "cd docs && pnpm run docs:dev",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "version:dry-run": "node scripts/bump-version.js patch --dry-run",
    "release:prepare": "pnpm build && pnpm version:dry-run"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
