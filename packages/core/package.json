{
  "name": "i18n-at",
  "version": "0.2.4",
  "description": "Type-safe internationalization tool for Next.js App Router with co-location and IDE code jumping",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Jabelic",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "scripts": {
    "build": "tsup && node postbuild.js",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "typescript",
    "react",
    "type-safe",
    "code-jumping",
    "nextjs"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@vitest/ui": "^4.0.15",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jabelic-works/i18n-at.git"
  },
  "bugs": {
    "url": "https://github.com/jabelic-works/i18n-at/issues"
  },
  "homepage": "https://github.com/jabelic-works/i18n-at/tree/main/packages/core#readme"
}
